<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="left|end"
    android:paddingHorizontal="16dp">

    <View android:id="@+id/View_open_chat_padding_other"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentTop="true"/>

    <TextView android:id="@+id/textView_date_open_chat_other"
        android:layout_below="@+id/View_open_chat_padding_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="February 12"
        android:textColor="@android:color/white"
        android:background="@drawable/date_backgroud"/>

    <ImageView
        android:id="@+id/imageView_open_chat_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/profile_user"
        android:layout_below="@id/textView_date_open_chat_other"
        android:layout_alignParentLeft="true"
        android:paddingTop="8dp"/>

    <android.support.v7.widget.CardView
        android:id="@+id/cardView_open_chat_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@android:color/white"
        app:cardPreventCornerOverlap="false"
        android:layout_toRightOf="@id/imageView_open_chat_other"
        android:layout_alignTop="@id/imageView_open_chat_other"
        android:layout_marginLeft="3dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_nickname_open_chat_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="User Name"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:fontFamily="cursive"
                android:layout_toRightOf="@id/imageView_open_chat_other"
                android:layout_alignTop="@id/imageView_open_chat_other"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"/>
            <View android:id="@+id/View_divider_open_Chat_other"
                style="@style/Divider"
                android:layout_marginHorizontal="10dp"/>
            <TextView
                android:id="@+id/textView_message_open_chat_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="200dp"
                android:padding="8dp"
                android:text="Message Body Message Body"
                android:textColor="@android:color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Edited)"
                android:textColor="@android:color/black"
                android:padding="3dp"
                android:layout_gravity="right"
                android:visibility="gone"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

